<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardCornerRadius="6dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="@drawable/gradiant_blue2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:gravity="center"
                android:src="@drawable/ic_calendar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </ImageView>

            <TextView
                android:id="@+id/dietListesiTitleTxt"
                android:gravity="center"
                tools:text="Title"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/dietListesiContentTxt"
            android:gravity="center"
            android:padding="20dp"
            tools:text="@string/anamnez_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <com.google.android.material.button.MaterialButton
            android:padding="15dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/dietListesiButton"
            android:text="@string/raporu_goruntule"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            app:icon="@drawable/ic_find"
            app:iconGravity="textStart"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>


</androidx.cardview.widget.CardView>