<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        android:weightSum="10"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        tools:context="LoginActivity">



    <androidx.appcompat.widget.AppCompatImageView
            android:layout_weight="4"
            android:src="@drawable/logo_big"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/smartplatesImageLogin" >

    </androidx.appcompat.widget.AppCompatImageView>

    <LinearLayout
            android:paddingLeft="10dp"
            android:gravity="center"
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <androidx.appcompat.widget.AppCompatEditText
                android:textColor="@color/black_overlay"
                android:backgroundTint="@color/black_overlay"
                android:textColorHint="@color/black_overlay"
                android:inputType="number"
                android:maxLines="1"
                android:layout_margin="10dp"

                android:hint="@string/phoneHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtPhoneNumber"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:textColor="@color/black_overlay"
                android:backgroundTint="@color/black_overlay"
                android:textColorHint="@color/black_overlay"
                android:inputType="textPassword"
                android:layout_margin="10dp"

                android:hint="@string/passwordHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtPassword"/>

        <LinearLayout

                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatCheckBox
                    android:gravity="center"
                    android:buttonTint="@color/black_overlay"
                    android:id="@+id/loginCheckBox"
                    android:textColorLink="@color/linkColor"
                    android:shadowColor="@color/linkColor"
                    android:textColor="@color/linkColor"
                    android:textColorHighlight="@color/linkColor"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/privacyLinkText"
                    android:textColor="@color/linkColor"
                    android:gravity="start|center_vertical"
                    android:text="@string/txtCredits"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

            </androidx.appcompat.widget.AppCompatTextView>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton

                android:enabled="false"
                android:textColor="@color/black_overlay"
                app:cornerRadius="5dp"
                android:id="@+id/btnGirisYap"
                android:background="@color/colorPrimary"
                android:layout_margin="10dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"/>

